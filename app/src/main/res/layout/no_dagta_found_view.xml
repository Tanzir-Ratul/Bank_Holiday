<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/careerNoQuestionImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/nodata_found_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/careerNoQuestionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="12sp"
        android:textColor="@color/lightBlue"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/careerNoQuestionImage"
        app:layout_constraintStart_toStartOf="@+id/careerNoQuestionImage"
        app:layout_constraintTop_toBottomOf="@+id/careerNoQuestionImage"
        android:text="@string/no_data_has_been_found"/>

</androidx.constraintlayout.widget.ConstraintLayout>